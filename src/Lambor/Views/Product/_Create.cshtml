@model ProductRenderViewModel

<partial name="_CustomValidationSummary" />
<form asp-action="Add" method="post" enctype="multipart/form-data">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                @if (Model.Product.Id == 0)
                {
                    <h4 class="modal-title">ایجاد محصولات جدید</h4>
                }
                else
                {
                    <h4 class="modal-title">ویرایش محصول</h4>
                }
            </div>
            <div class="modal-body">
                <input asp-for="Product.Id" name="Id" />

                <div class="form-group row">
                    <label asp-for="Product.Name" class="col-md-3 col-form-label text-md-left"></label>
                    <div class="col-md-9">
                        <input dir="ltr" asp-for="Product.Name" class="form-control" name="Name" />
                        <span asp-validation-for="Product.Name" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <label asp-for="Product.Price" class="col-md-3 col-form-label text-md-left"></label>
                    <div class="col-md-9">
                        <input dir="ltr" asp-for="Product.Price" class="form-control" name="Price" />
                        <span asp-validation-for="Product.Price" class="text-danger"></span>
                    </div>
                </div>




                <div class="form-group row">
                    <label asp-for="Product.Description" class="col-md-3 col-form-label text-md-left"></label>
                    <div class="col-md-9">
                        <input dir="ltr" asp-for="Product.Description" class="form-control" name="Description" />
                        <span asp-validation-for="Product.Description" class="text-danger"></span>
                    </div>
                </div>
                @{
                    /*Category ComboBox}*/
                }
                <div class="form-group row">
                    <label asp-for="Product.CategoryId" class="col-md-3 col-form-label text-md-left"></label>
                    <div class="col-md-9">

                        <select dir="ltr" asp-for="Product.CategoryId" asp-items="Model.Categories" class="form-control" name="CategoryId">
                        </select>
                        <span asp-validation-for="Product.CategoryId" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="Product.BrandId" class="col-md-3 col-form-label text-md-left"></label>
                    <div class="col-md-9">

                        <select dir="ltr" asp-for="Product.BrandId" asp-items="Model.Brands" class="form-control" name="BrandId">
                        </select>
                        <span asp-validation-for="Product.BrandId" class="text-danger"></span>
                    </div>
                </div>


                <div class="form-group row">
                    <label asp-for="Product.BrandId" class="col-md-3 col-form-label text-md-left"></label>
                    <div class="col-md-9">
                        @if (!string.IsNullOrWhiteSpace(Model.Product.Image))
                        {
                            <img src="Product.Image" class="img-thumbnail" />
                        }
                        <input name="ProductImage" id="ProductImage" type="file" accept=".jpg,jpeg,png" />
                        <span asp-validation-for="Product.Image" class="text-danger"></span>
                    </div>
                </div>


            </div>
            <div class="modal-footer">
                <button class="btn btn-primary" type="submit">ثبت</button>
                <button class="btn" data-dismiss="modal" aria-hidden="true">انصراف</button>
            </div>
        </div>
    </div>
</form>